
#include <stdio.h>

struct totsum
{
    int n;
    int sum;
};
struct totsum input()
{
    struct totsum i;
    printf("\nEnter the value of n:");
    scanf("%d",&i.n);
    return i;
}
struct totsum compute(struct totsum i)
{
    
    i.sum=0;
    for( int k=0;k<=i.n;k++)
    {
        i.sum=i.sum+k; 
    }
    return i;
}
void display(struct totsum i)
{
    
    printf("Sum of first %d natural numbers is = %d ",i.n,i.sum);
}
int main()
{
    struct totsum i;
    i=input();
    i=compute(i);
    display(i);
    return 0;
 }
 
 
 Enter the value of n:2                                                                                                         
Sum of first 2 natural numbers is = 3  
