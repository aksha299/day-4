#include <stdio.h>
#include<math.h>

struct sqsum
{
    int n;
    float sum;
    int a[50];
};

struct sqsum read()
{
    struct sqsum i;
    printf("\nEnter the value of n:\n");
    scanf("%d",&i.n);
    printf("\nEnter the elements:\n");
    for(int k=0;k<i.n;k++)
    scanf("%d",&i.a[k]);
    return i;
}
struct sqsum compute(struct sqsum i)
{
    i.sum=0;
    for(int k=0;k<=i.n;k++)
    {
        i.sum=i.sum+sqrt(i.a[k]);
    }

    return i;
}
void display(struct sqsum i)
{
    printf("\n Sum of squareroot of the input elements is= %f",i.n,i.sum);
}

int main()
{
    struct sqsum i;
    i=read();
    i=compute(i);
    display(i);
    return 0;
 }
 ********************************************************************************************************
 
 struct small
{
    int n;
    int a[50];
    int s;
};

struct small read()
{
    struct small i;
    printf("\nEnter the number of elements you want to input:\n");
    scanf("%d",&i.n);
    printf("\nEnter the array elements:\n");
    for(int k=0;k<i.n;k++)
    scanf("%d",&i.a[k]);
    return i;
}

struct small compute(struct small i)
{
    i.s=i.a[0];
    for(int k=0;k<i.n;k++)
    {
        if(i.s>i.a[k])
        {
            i.s=i.a[k];
        }
    }
    return i;
}

void display(struct small i)
{
    printf("\nSmallest number among the other elements in the array is: %d",i.s);
}

int main()
{
    struct small i;
    i=read();
    i=compute(i);
    display(i);
    return 0;
}
