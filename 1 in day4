#include <stdio.h>

struct display
{
    int n;
    int a[50];
};
struct display readn()
{
    struct display i;
    printf("\nHow many elements you want to input? \n");
    scanf("%d",&i.n);
    return i;
}
struct display readele(struct display i)
{
    printf("\nEnter the elements :\n");
    for(int k=0;k<i.n;k++)
    {
        scanf("%d",&i.a[k]);
    }
    return i;
}
void output(struct display i)
{
    printf("\nEntered elements are:\n");
    for(int k=0;k<i.n;k++)
     printf("\n%d",i.a[k]);
}
void main()
{
    struct display i;
    i=readn();
    i=readele(i);
    output(i);
}
