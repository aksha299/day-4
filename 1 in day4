
#include <stdio.h>

struct totsum
{
    int n;
    int sum;
    int a[50];
};
struct totsum input()
{
    struct totsum i;
    printf("\nEnter the size of the array:\n");
    scanf("%d",&i.n);
    printf("\nEnter the elements:\n");
    for(int k=0;k<i.n;K++)
    scanf("%d",&i.a[k]);
    return i;
}
struct totsum compute(struct totsum i)
{
    
    i.sum=0;
    for( int k=0;k<=i.n;k++)
    {
        i.sum=i.sum+i.a[k]; 
    }
    return i;
}
void display(struct totsum i)
{
    printf("Sum of the elements in array is = %d ",i.n,i.sum);
}
int main()
{
    struct totsum i;
    i=input();
    i=compute(i);
    display(i);
    return 0;
}

